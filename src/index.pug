extends ./main.layout.pug

block content
    .welcome-section
        section.hero
            .container.hero__container
                header.header
                    a.logo(href="#") BA
                    nav.menu
                        - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"]
                        ul.menu__list
                            each item in menuItems
                                li.menu__item
                                    a(href="#").menu__link #{item}

                    - var socials = ["insta", "vk", "github", "envelope"]
                        ul.socials
                            each item in socials
                                li.socials__item
                                    a(href="#").socials__link
                                        +icon(item, "socials__icon")
                .userInfo
                    .userInfo__title Личный сайт #[br] веб разработчика
                    .userInfo__name Борис Козычев
                .hero__downbutton
                    .scroll-down
                    a(href="").scroll-down__btn Скролл
        section.about
            .container.about__container
                .about__user
                    .user
                        .user__avatar
                            .user__avatar-style
                                +image("content/user.jpg", 'user__avatar-pic')
                        -
                            var userInfo = [
                                ["Проживаю:", "Алматы"],
                                ["Возраст:", "29 лет"],
                                ["Родился:", "8 октября 1991"]
                            ];

                        table.user__data
                            each item in userInfo
                                tr.user__data-row
                                    td.user__data-title #{item[0]}
                                    td.user__data-content #{item[1]}